  margin-top: 140rpx;
  margin-right: 40rpx;
  font-size: 45rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}
.expectJob{
  height: 80rpx;
  margin-top: 120rpx;
  background-color: #31799f;
