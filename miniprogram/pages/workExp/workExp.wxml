<!--miniprogram/pages/workExp/workExp.wxml-->

<view class="page">
    <view class="container">
         <form bindsubmit="addWorkExp">
        <view class="first-title">
        <text class="title">公司名称</text>
        <input class="inputText" placeholder="请填写公司名称" focus="{{focus}}" name="company" />
    </view>
    <view class="titleType">
        <text class="title">从事职位</text>
        <input class="inputText" placeholder="请填写从事职位" focus="{{focus}}" name="job" />
    </view>
    <view class="titleType">
        <text class="title">开始时间</text>
        <input class="inputText" placeholder="请填写入职时间，2018-09-01" focus="{{focus}}" name="begindate" />
    </view>
    <view class="titleType">
        <text class="title">结束时间</text>
        <input class="inputText" placeholder="请填写离职时间，2018-09-01" focus="{{focus}}" name="enddate" />
    </view>
    <view class="titleType">
        <text class="title">工作描述</text>
        <textarea rows="3" cols="20" placeholder="请描述你在公司所作所为" focus="{{focus}}" class="descript" name="desc"/>
    </view>
        </form>
        </view>
    <view class="return">返回</view>
    <button class="next" formType="submit">提交</button>
</view>