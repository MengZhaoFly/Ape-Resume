/* miniprogram/pages/info/info.wxss */
.search-container{
  background-color: #76a8f0;
}
.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width: 710rpx;
  height:60rpx;
  background-color:whitesmoke;
  border:1rpx solid whitesmoke;
  border-radius: 5rpx;
  margin: 0 auto;
}

/* 搜索框提示文字样式 */
.search input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
}
/* 搜索框小图标 */
.search image
{ 
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
}
/* 轮播 */
.navbar-container{
  display: flex;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 60rpx;
  z-index: 500;
  width: 100%;
  height: 100rpx;
  flex-direction: row;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #76a8f0;
}
.navbar-item{
  flex: 1;
  padding: 40rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #494949;
  color: #fff;
  font-weight: bold;
}

.content-wrapper{
  padding-top: 50px;
}